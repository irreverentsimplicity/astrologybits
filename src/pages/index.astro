---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllPages, getAllPosts } from '../lib/wordpress';
import { makeLinksRelative, updateWordPressImageUrls } from '../lib/utils';

const pages = await getAllPages();
const posts = await getAllPosts();

const homepage = pages.find(p => p.slug === 'welcome') 
               || pages.find(p => p.uri === '/') 
               || pages[0];

if (!homepage) {
  throw new Error('Could not find homepage!');
}

const processedContent = makeLinksRelative(homepage.content);

// Get latest 3 blog posts
const latestPosts = posts
  .sort((a, b) => new Date(b.date) - new Date(a.date))
  .slice(0, 3);

function formatDate(dateString) {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getExcerpt(content, length = 120) {
  if (!content) return '';
  const text = content.replace(/<[^>]*>/g, '');
  return text.length > length ? text.substring(0, length) + '...' : text;
}

function getFeaturedImage(post) {
  return updateWordPressImageUrls(post.featuredImage?.node?.sourceUrl) || null;
}

function getFeaturedImageAlt(post) {
  return post.featuredImage?.node?.altText || post.title || 'Blog post image';
}
---

<BaseLayout page={homepage}>
  <div class="wp-content" set:html={processedContent} />
  
  {latestPosts.length > 0 && (
    <section class="latest-posts">
      <h2>Latest Astrology Blog Posts</h2>
      <div class="posts-grid">
        {latestPosts.map(post => (
          <article class="post-card">
            {getFeaturedImage(post) && (
              <div class="post-image-container">
                <a href={post.uri} class="post-image-link">
                  <img 
                    src={getFeaturedImage(post)} 
                    alt={getFeaturedImageAlt(post)}
                    class="post-image"
                    loading="lazy"
                  />
                </a>
              </div>
            )}
            <div class="post-card-content">
              <h3 class="post-card-title">
                <a href={post.uri}>{post.title}</a>
              </h3>
              <time class="post-date" datetime={post.date}>
                {formatDate(post.date)}
              </time>
              <p class="post-excerpt">{getExcerpt(post.excerpt || post.content)}</p>
              <a href={post.uri} class="read-more">Read More →</a>
            </div>
          </article>
        ))}
      </div>
      <div class="view-all-posts">
        <a href="/blog/" class="view-all-link">View All Blog Posts →</a>
      </div>
    </section>
  )}

  <style>
    .latest-posts {
      margin-top: 4rem;
      padding-top: 3rem;
      border-top: 1px solid #e1e5e9;
    }

    .latest-posts h2 {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 2.5rem;
      color: #2c3e50;
    }

    .posts-grid {
      display: grid;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .post-card {
      background: #fff;
      border: 1px solid #e1e5e9;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      display: flex;
      flex-direction: column;
    }

    .post-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .post-image-container {
      width: 100%;
      height: 180px;
      overflow: hidden;
      position: relative;
    }

    .post-image-link {
      display: block;
      width: 100%;
      height: 100%;
    }

    .post-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.2s ease;
    }

    .post-card:hover .post-image {
      transform: scale(1.05);
    }

    .post-card-content {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      padding: 1.5rem;
      flex: 1;
    }

    .post-card-title {
      font-size: 1.25rem;
      margin: 0;
      line-height: 1.4;
    }

    .post-card-title a {
      color: #2c3e50 !important;
      text-decoration: none;
    }

    .post-card-title a:hover {
      color: #0066cc !important;
      text-decoration: underline;
    }

    .post-date {
      font-size: 0.85rem;
      color: #5a6c7d;
      font-weight: 500;
    }

    .post-excerpt {
      color: #4a5568;
      line-height: 1.6;
      margin: 0;
      font-size: 0.95rem;
    }

    .read-more {
      color: #0066cc !important;
      font-weight: 500;
      text-decoration: none;
      align-self: flex-start;
      margin-top: auto;
      font-size: 0.9rem;
    }

    .read-more:hover {
      text-decoration: underline;
    }

    .view-all-posts {
      text-align: center;
      margin-top: 2rem;
    }

    .view-all-link {
      background: #2c3e50;
      color: #fff !important;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 500;
      display: inline-block;
      transition: background-color 0.2s ease;
    }

    .view-all-link:hover {
      background: #1a252f;
      text-decoration: none;
    }

    /* Responsive grid */
    @media (min-width: 768px) {
      .posts-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (min-width: 640px) and (max-width: 767px) {
      .posts-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 640px) {
      .latest-posts h2 {
        font-size: 1.75rem;
      }
      
      .post-card {
        padding: 1.25rem;
      }
      
      .post-card-title {
        font-size: 1.1rem;
      }
    }
  </style>
</BaseLayout>